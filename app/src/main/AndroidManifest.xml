<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tlbail.ptuts3androidapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PtutS3AndroidApp">
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.ResultActivity"
            android:exported="false" />
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.PhotoActivity"
            android:exported="false" />
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.ReglageActivity"
            android:exported="false" />
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.CollectionActivity"
            android:exported="false" />
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.AchievementActivity"
            android:exported="false" />
        <activity
            android:name="com.tlbail.ptuts3androidapp.Controller.HomeActivity"
            android:exported="false" />
        <activity android:name="com.tlbail.ptuts3androidapp.Controller.LoadingScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>